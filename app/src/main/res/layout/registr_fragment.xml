<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#ffffffff"
    android:background="#ffffffff">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="15dp">
    <EditText
        android:id="@+id/edtLoginAuth"
        android:layout_width="0dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/skin_pack_selected"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:inputType="phone"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:hint="Логин"/>


    <EditText
        android:id="@+id/edtNameAuth"
        android:layout_width="0dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@id/edtLoginAuth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="24dp"
        android:background="@drawable/skin_pack_selected"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:hint="Имя"/>

    <EditText
        android:id="@+id/edtLastNameAuth"
        android:layout_width="0dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@id/edtNameAuth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="24dp"
        android:background="@drawable/skin_pack_selected"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:hint="фамилия"/>

    <EditText
        android:id="@+id/edtMailAuth"
        android:layout_width="0dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@id/edtLastNameAuth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="24dp"
        android:background="@drawable/skin_pack_selected"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:hint="почта"/>

    <EditText
        android:id="@+id/edtPasswordAuth"
        android:layout_width="0dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@id/edtMailAuth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="24dp"
        android:background="@drawable/skin_pack_selected"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:inputType="textPassword"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:hint=" пароль"/>

    <EditText
        android:id="@+id/edtPhoneAuth"
        android:layout_width="0dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@id/edtPasswordAuth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="24dp"
        android:background="@drawable/skin_pack_selected"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:inputType="number"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:hint=" номер телефона"/>

    <EditText
        android:id="@+id/edtStatusAuth"
        android:layout_width="0dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@id/edtPhoneAuth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="24dp"
        android:background="@drawable/skin_pack_selected"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:inputType="number"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:hint=" статус(1-5)"/>



    <Button
        android:id="@+id/btnSignInAuth"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        app:layout_constraintTop_toBottomOf="@id/edtStatusAuth"
        app:layout_constraintStart_toStartOf="@+id/edtStatusAuth"
        app:layout_constraintEnd_toEndOf="@+id/edtStatusAuth"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/skin_pack"
        android:backgroundTint="@color/colorGold"
        android:textSize="16sp"
        android:textColor="#0C2136"
        android:text="Registration"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>